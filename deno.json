{
  "tasks": {
    "dev": "deno run --allow-env --allow-sys --allow-read --allow-write --allow-net --watch server.ts",
    "start": "deno run --allow-env --allow-sys --allow-read --allow-net --watch server.ts",
    "test": "deno test --allow-env --allow-sys --allow-read --allow-net --watch"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/dotenv": "https://deno.land/std@0.201.0/dotenv/mod.ts",
    "@types/node": "npm:@types/node@^24.2.0",
    "@zarco/isness": "jsr:@zarco/isness@^0.1.18",
    "@zarco/switcher": "jsr:@zarco/switcher@^0.2.4",
    "bcrypt": "npm:bcrypt@^6.0.0",
    "dayjs": "npm:dayjs@^1.11.18",
    "express": "npm:express@^5.1.0",
    "helmet": "npm:helmet@^8.1.0",
    "http-status-codes": "npm:http-status-codes@^2.3.0",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2",
    "mongoose": "npm:mongoose@8.16.1",
    "mongoose-aggregate-paginate-v2": "npm:mongoose-aggregate-paginate-v2@^1.0.7",
    "morgan": "npm:morgan@^1.10.1",
    "request-check": "npm:request-check@^1.5.4",
    "responser": "npm:responser@^2.5.6",
    "swagger-jsdoc": "npm:swagger-jsdoc@^6.2.8",
    "swagger-ui-express": "npm:swagger-ui-express@^5.0.1",
    "throwlhos": "npm:throwlhos@^1.0.1"
  },
   "compilerOptions": {
    "strict": true,
    "types": [
      "./types/express/index.d.ts"
    ],
    "lib": [
      "deno.ns",
      "deno.window"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "require-await"
      ],
      "exclude": [
        "no-namespace",
        "no-debugger",
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "include": [
      "**/*.ts",
      "**/*.js",
      "**/*.json",
      "**/*.md"
    ],
    "options": {
      "useTabs": false,
      "lineWidth": 150,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": false
    }
  }
}
